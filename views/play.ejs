<script
        src="https://code.jquery.com/jquery-3.1.1.min.js"
        integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
        crossorigin="anonymous"></script>
<!DOCTYPE html>
<html>
<% include templates/header.ejs %>
<head>
    <title>Play</title>
    <% include templates/head.ejs %>
</head>
<body>

<script>
    var game = <%- JSON.stringify(game) %>
    var player = game.players[0];
            $("document").ready(function () {
                var callback = function (data) {
                    console.log("callback");
                    $('#playScore').html(data);
                };

                $("#plus10").click(function () {
                    console.log("playerId: " + player.id);
                    $.get('/game/' + game.id + '/score', {
                        playerId: player.id,
                        change: $('#plus10').text(),
                    }, callback);
                });

                $("#minus10").click(function () {
                    console.log("Minus10 click");
                    $.get('/game/' + game.id + '/score', {
                        playerId: player.id,
                        change: $('#minus10').text(),
                    }, callback);
                });
            });
</script>

<div id="player"><%= game.players[0].name %></div>
<label id="playScore"><%= game.players[0].score %></label>

<button id="plus10" type="button" class="btn btn-default">-10</button>
<button id="minus10" type="button" class="btn btn-default">+10</button>

<% include templates/footer.ejs %>

</body>
</html>